@model IEnumerable<TecnodonaGenNHibernate.EN.Tecnodona.ArticuloEN>
@{
    ViewBag.Title = "Bienvenidos a la tienda de TecnoDona";
}

<h3>Árticulos más importantes</h3>
<table>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.ActionLink("Ver Detalle", "Detail", "Artículo", routeValues: new { id = item.Id}, htmlAttributes: null)
        </td>
    </tr>
    }
</table>


<!-- Ejemplo de dropdown  -->
        <br />
        <br />
        <div class="container-fluid">
            <div class="row" style="background-color:gray">
                <div class="col-sm-12" style="background-color: gray">
                </div>
            </div>

            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Dropdown
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    @foreach (var item in Model)
                    {
                        <li>@Html.DisplayFor(modelItem => item.Descripcion)@Html.DisplayFor(modelItem => item.Precio)</li>

                    }
                </ul>
            </div>
        </div>